{
	"name": "server",
	"version": "0.0.0",
	"license": "GPL-3.0-or-later",
	"private": true,
	"scripts": {
		"build": "tsc && mkdir -p dist/server/src/views && cp src/views/*.jade dist/server/src/views",
		"start": "node dist/server/src/app.js",
		"serve": "yarn nodemon --legacy-watch --watch 'src' --watch '../shared/src' -e 'ts,jade' --exec 'yarn serve-exec'",
		"serve-exec": "yarn tsc --incremental --tsBuildInfoFile dist/tsBuildInfo.json && mkdir -p dist/server/src/views && cp src/views/*.jade dist/server/src/views && node dist/server/src/app.js",
		"lint": "yarn eslint src/ --ext .ts",
		"lint-fix": "yarn eslint src/ --ext .ts --fix",
		"test": "yarn jest"
	},
	"dependencies": {
		"@types/bcrypt": "^3.0.0",
		"@types/console-stamp": "^0.2.33",
		"@types/cookie-parser": "^1.4.2",
		"@types/express": "^4.17.8",
		"@types/express-list-endpoints": "^4.0.1",
		"@types/express-session": "^1.17.3",
		"@types/express-ws": "^3.0.0",
		"@types/glob": "^7.1.3",
		"@types/jest": "^26.0.19",
		"@types/jsonwebtoken": "^8.5.0",
		"@types/morgan": "^1.9.1",
		"@types/pg": "^7.14.7",
		"@types/seedrandom": "^2.4.28",
		"@types/sequelize": "^4.28.9",
		"@types/sharp": "^0.27.1",
		"@types/uuid": "^8.3.0",
		"@typescript-eslint/eslint-plugin": "^4.11.1",
		"@typescript-eslint/parser": "^4.11.1",
		"bcrypt": "^5.0.0",
		"canvas": "^2.6.1",
		"console-stamp": "^0.2.9",
		"cookie-parser": "^1.4.5",
		"copyfiles": "^2.4.1",
		"cors": "^2.8.5",
		"db-migrate": "^0.11.12",
		"debug": "~4.3.1",
		"express": "~4.17.1",
		"express-list-endpoints": "5.0.0",
		"express-session": "^1.17.1",
		"express-ws": "^4.0.0",
		"glob": "^7.1.6",
		"google-auth-library": "^6.1.3",
		"http-errors": "~1.8.0",
		"jade": "~1.11.0",
		"jest": "^26.6.3",
		"jsonwebtoken": "^8.5.1",
		"lzutf8": "^0.5.6",
		"module-alias": "^2.2.2",
		"morgan": "~1.10.0",
		"njstrace": "^1.2.0",
		"node-pg-migrate": "^5.9.0",
		"node-uuid": "^1.4.8",
		"pg": "^8.5.1",
		"pgmigrate": "^5.0.0",
		"rgb-hex": "^3.0.0",
		"seedrandom": "^3.0.5",
		"sequelize": "^6.3.5",
		"sharp": "^0.27.0",
		"source-map-support": "^0.5.19",
		"ts-jest": "^26.4.4",
		"ts-node": "^9.1.1",
		"tspath": "^1.3.7",
		"typescript": "^4.1.3",
		"uuid": "^8.3.1"
	},
	"devDependencies": {
		"eslint": "^7.17.0",
		"eslint-config-prettier": "^7.1.0",
		"eslint-plugin-flowtype": "^5.2.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^3.3.0",
		"nodemon": "^2.0.4",
		"prettier": "^2.2.1",
		"prettier-eslint": "^12.0.0"
	},
	"_moduleAliases": {
		"@src": "dist/server/src",
		"@shared": "dist/shared/src"
	},
	"babel": {
		"presets": [
			"@babel/preset-env",
			"@babel/preset-typescript"
		],
		"plugins": [
			"@babel/proposal-class-properties",
			"@babel/proposal-object-rest-spread",
			"@babel/plugin-transform-runtime",
			[
				"module-resolver",
				{
					"alias": {
						"@src": "./src",
						"@shared": "../shared/src"
					}
				}
			]
		]
	}
}
