	"scripts": {
		"build": "tsc && mkdir -p dist/server/src/views && cp src/views/*.jade dist/server/src/views",
		"start": "node dist/server/src/app.js",
		"serve": "yarn nodemon --legacy-watch --watch 'src' --watch '../shared/src' -e 'ts,jade' --exec 'sh scripts/serve-exec.sh'",
		"lint": "yarn eslint src/ --ext .ts",
		"lint-fix": "yarn eslint src/ --ext .ts --fix",
		"test": "yarn jest",
		"production": "yarn && yarn build && yarn start",
		"nuke": "rm -rf node_modules"
	},
