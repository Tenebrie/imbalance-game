{
	"compilerOptions": {
		"strict": true,
		"module": "commonjs",
		"target": "es2019",
		"lib": ["es2019"],
		"moduleResolution": "node",
		"allowJs": true,
		"noEmit": false,
		"esModuleInterop": true,
		"jsx": "react",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./src",
		"types": ["jest"],
		"resolveJsonModule": true,
		"typeRoots": ["node_modules/@types"],
		"paths": {
			"@src/*": ["./*"],
			"@shared/*": ["../../shared/src/*"]
		},
		"skipLibCheck": true
	},
	"include": ["./src"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
